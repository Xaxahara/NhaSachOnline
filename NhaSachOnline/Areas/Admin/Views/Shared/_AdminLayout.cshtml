<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị - Nhà Sách Online</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                padding: 10px 15px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    text-decoration: none;
                }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="sidebar">
            <h3 class="text-white text-center">Quản trị</h3>
            <a asp-area="Admin" asp-controller="Product" asp-action="Index">Quản lý sản phẩm</a>
            <a asp-area="Admin" asp-controller="Order" asp-action="Index">Quản lý đơn hàng</a>
            <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">Đăng xuất</a>
        </div>
        <div class="content flex-grow-1">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>