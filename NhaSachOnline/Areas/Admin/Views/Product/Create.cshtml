@model NhaSachOnline.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<h2>Thêm sản phẩm mới</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Name">Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price">Giá (VND)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CategoryId">Danh mục</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Author">Tác giả</label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Publisher">Nhà xuất bản</label>
        <input asp-for="Publisher" class="form-control" />
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PublicationYear">Năm xuất bản</label>
        <input asp-for="PublicationYear" class="form-control" type="number" />
        <span asp-validation-for="PublicationYear" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Stock">Số lượng tồn kho</label>
        <input asp-for="Stock" class="form-control" type="number" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Hình ảnh</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Bạn có thể bỏ qua nếu không muốn thêm hình ảnh.</small>
    </div>
    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}