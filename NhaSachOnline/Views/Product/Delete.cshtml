@model NhaSachOnline.Models.Product

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Price</dt>
        <dd>@Model.Price.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) VND</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Category</dt>
        <dd>@(Model.Category?.Name ?? "Không có danh mục")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </form>
</div>