@model NhaSachOnline.Models.ErrorViewModel

@{
    ViewData["Title"] = "Lỗi";
}

<h1 class="text-danger">Lỗi</h1>
<h2 class="text-danger">Đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Mã yêu cầu:</strong> <code>@Model.RequestId</code>
    </p>
}

<p>Vui lòng thử lại sau hoặc liên hệ với quản trị viên nếu sự cố vẫn tiếp diễn.</p>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Quay lại trang chủ</a>